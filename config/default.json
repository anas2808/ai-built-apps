{
  "app": {
    "port": 3000,
    "host": "localhost",
    "name": "MyApp",
    "environment": "development"
  },
  "database": {
    "url": "mongodb://localhost:27017/myapp",
    "options": {
      "useNewUrlParser": true,
      "useUnifiedTopology": true
    }
  },
  "logger": {
    "level": "info",
    "file": "logs/app.log",
    "console": true
  },
  "jwt": {
    "secret": "your_jwt_secret",
    "expiration": "1h"
  },
  "api": {
    "version": "v1",
    "baseUrl": "/api"
  },
  "cors": {
    "origin": "*",
    "methods": ["GET", "POST", "PUT", "DELETE"],
    "preflightContinue": false,
    "optionsSuccessStatus": 204
  }
}